<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/couleur_app_bar"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="left"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/back_menu_principal"
                android:src="@drawable/ic_baseline_arrow_back_ios_white_24"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ajouter_nouveau_contact"
                android:textStyle="bold"
                android:gravity="center|center_vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/couleur_blanche"
                android:fontFamily="@font/exo_regular"
                />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:padding="5dp"
            android:text="@string/save"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:textColor="@color/couleur_blanche"
            android:id="@+id/tv_save_contact"
            android:gravity="center"
            android:focusable="true"
            android:layout_alignParentRight="true">

        </TextView>


    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>